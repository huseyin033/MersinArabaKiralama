@model MersinArabaKiralama.Models.Rental
@{
    ViewData["Title"] = "Kiralama Sil";
}
<h2>Kiralama Sil</h2>
<h4>Bu kiralamayı silmek istediğinize emin misiniz?</h4>
<dl class="row">
    <dt class="col-sm-2">Araç</dt>
    <dd class="col-sm-10">@Model.Car?.Brand @Model.Car?.Model</dd>
    <dt class="col-sm-2">Müşteri</dt>
    <dd class="col-sm-10">@Model.Customer?.Name</dd>
    <dt class="col-sm-2">Başlangıç</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Bitiş</dt>
    <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Toplam Fiyat</dt>
    <dd class="col-sm-10">@Model.TotalPrice ₺</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
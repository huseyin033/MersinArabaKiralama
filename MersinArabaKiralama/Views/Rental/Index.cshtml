@model IEnumerable<MersinArabaKiralama.Models.Rental>
@{
    ViewData["Title"] = "Kiralama Listesi";
}
<h2>Kiralama Listesi</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Yeni Kiralama Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Araç</th>
            <th>Müşteri</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Toplam Fiyat</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Car?.Brand @item.Car?.Model</td>
                <td>@item.Customer?.Name</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.TotalPrice ₺</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model MersinArabaKiralama.Models.Rental
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Yeni Kiralama Ekle";
}
<h2>Yeni Kiralama Ekle</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CarId"></label>
        <select asp-for="CarId" class="form-control" asp-items="@(new SelectList(ViewBag.Cars, "Id", "Brand"))"></select>
        <span asp-validation-for="CarId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
@{
    ViewData["Title"] = "Ödeme Başarılı";
    Layout = "_Layout";
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
        <h4 class="alert-heading">Ödemeniz Başarılı!</h4>
        <p class="mb-0">@ViewBag.SuccessMessage</p>
        <p class="mb-0">Keyifli sürüşler dileriz!</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <a href="@Url.Action("Index", "Car")" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>

@model MersinArabaKiralama.Models.Car

@{
    ViewData["Title"] = "Araç Düzenle";
}

<h2>Araç Düzenle</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DailyPrice"></label>
        <input asp-for="DailyPrice" class="form-control" />
        <span asp-validation-for="DailyPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>